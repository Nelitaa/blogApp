<section>
  <h1>Users</h1>
  <ul>
    <% @users.each do |user| %>
      <li>
        <%= image_tag user.photo %>
        <div>
          <h2><%= link_to user.name, user_path(user) %></h2>
          <p>Number of posts: <%= if user.posts.any? then user.posts_counter else 0 end %></p> 
        </div>
      </li>
    <% end %>
  </ul>
</section>
